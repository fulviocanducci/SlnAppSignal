@model Web.Models.People
@{
   ViewData["Title"] = "Excluir";
}
<h1>Pessoa</h1>
<h5>Deseja excluir @($"{Model?.Name}?")</h5>
<hr />
<div>
   <dl class="row">
      <dt class="col-sm-2 text-end">
         @Html.DisplayNameFor(model => model.Name):
      </dt>
      <dd class="col-sm-10 text-start">
         @Html.DisplayFor(model => model.Name)
      </dd>
   </dl>
   <form asp-action="Delete">
      <input type="hidden" asp-for="Id" />
      <button type="submit" value="Delete" class="btn btn-danger btn-sm"><i class="bi bi-trash2"></i> Excluir</button>
      <a asp-action="Index" class="btn btn-sm btn-secondary"><i class="bi bi-backspace"></i> Cancelar</a>
   </form>
</div>
