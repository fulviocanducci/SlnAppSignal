@model Web.Models.People
@{
   ViewData["Title"] = "Criar";
}
<h1>Pessoas - Cadastro</h1>
<hr />
<div class="row">
   <div class="col-md-12">
      <form asp-action="Create">
         <div asp-validation-summary="ModelOnly" class="text-danger"></div>
         <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
         </div>
         <div class="form-group mt-2 mb-2">
            <button type="submit" class="btn btn-primary btn-sm"><i class="bi bi-check-lg"></i> Criar</button>
            <a asp-action="Index" class="btn btn-sm btn-secondary"><i class="bi bi-backspace"></i> Cancelar</a>
         </div>
      </form>
   </div>
</div>
@section Scripts {
   @{
      await Html.RenderPartialAsync("_ValidationScriptsPartial");
   }
}